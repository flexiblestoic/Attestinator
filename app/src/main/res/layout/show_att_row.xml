<?xml version="1.0" encoding="utf-8"?>
<TableRow  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/show_att_1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="64dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/roundedbutton"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toStartOf="@+id/show_att_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_add_att"
            android:contentDescription="@string/show_attestation" />

        <TextView
            android:id="@+id/label_att_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintEnd_toEndOf="@+id/show_att_1"
            app:layout_constraintStart_toStartOf="@+id/show_att_1"
            app:layout_constraintTop_toBottomOf="@+id/show_att_1" />

        <ImageButton
            android:id="@+id/show_att_2"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/roundedbutton"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toStartOf="@+id/show_att_3"
            app:layout_constraintStart_toEndOf="@+id/show_att_1"
            app:layout_constraintTop_toTopOf="@+id/show_att_1"
            app:srcCompat="@drawable/ic_add_att"
            android:contentDescription="@string/show_attestation" />

        <TextView
            android:id="@+id/label_att_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintEnd_toEndOf="@+id/show_att_2"
            app:layout_constraintStart_toStartOf="@+id/show_att_2"
            app:layout_constraintTop_toBottomOf="@+id/show_att_2" />

        <ImageButton
            android:id="@+id/show_att_3"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="64dp"
            android:background="@drawable/roundedbutton"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/show_att_2"
            app:layout_constraintTop_toTopOf="@+id/show_att_2"
            app:srcCompat="@drawable/ic_add_att"
            android:contentDescription="@string/show_attestation" />

        <TextView
            android:id="@+id/label_att_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            app:layout_constraintEnd_toEndOf="@+id/show_att_3"
            app:layout_constraintStart_toStartOf="@+id/show_att_3"
            app:layout_constraintTop_toBottomOf="@+id/show_att_3" />
    </androidx.constraintlayout.widget.ConstraintLayout>



</TableRow >